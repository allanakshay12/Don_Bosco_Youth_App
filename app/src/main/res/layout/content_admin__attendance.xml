<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.allanakshay.donboscoyouth.Admin_Attendance"
    tools:showIn="@layout/activity_admin__attendance"
    android:background="@color/black_overlay">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/attendance_total"
        android:text="Total Attendance : "
        android:background="@color/balance"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="25dp"
        android:padding="5dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/black_overlay"
        android:id="@+id/attendance_list"
        android:dividerHeight="5dp"
        android:layout_above="@id/attendance_total">
    </ListView>


    <Button
        android:layout_width="26dp"
        android:layout_height="40dp"
        android:background="@drawable/attendance_add"
        android:drawableLeft="@drawable/minus_one"
        android:layout_alignParentBottom="true"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginRight="56dp"
        android:textColor="@color/background"
        android:id="@+id/attendance_total_subtract"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="26dp"
        android:layout_height="40dp"
        android:background="@drawable/attendance_add"
        android:drawableLeft="@drawable/ic_exposure_plus_1_black_24dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textColor="@color/background"
        android:id="@+id/attendance_total_add"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />


</RelativeLayout>
