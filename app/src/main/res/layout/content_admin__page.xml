<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black_overlay">
<ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.allanakshay.donboscoyouth.Admin_Page"
    tools:showIn="@layout/activity_admin__page">

    <Button
    android:layout_width="match_parent"
    android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
    android:text="Update Attendance"
    android:textColor="@color/background"
    android:textStyle="bold"
    android:background="@drawable/attendance_homepage"
    android:id="@+id/attendanceupdate"/>








    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_below="@id/attendanceupdate"
        android:text="Update Events"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:background="@drawable/upcoming_events_homepage"
        android:id="@+id/admin_update_event"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_below="@id/admin_update_event"
        android:text="Update Minutes of Meeting"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:background="@drawable/mom_homepage"
        android:id="@+id/admin_update_MOM"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_below="@id/admin_update_MOM"
        android:text="Update Finance"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:background="@drawable/finance_homepage"
        android:id="@+id/admin_update_finance"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_below="@id/admin_update_finance"
        android:text="Update Members"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:background="@drawable/know_your_group_homepage"
        android:id="@+id/admin_update_members"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_below="@id/admin_update_members"
        android:text="Upcoming Plans"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:background="@drawable/plans_admin"
        android:id="@+id/admin_update_plans"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:typeface="serif"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="bottom"
        android:layout_below="@id/admin_update_plans"
        android:text="Push Notification to Users"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:background="@drawable/admin_push"
        android:id="@+id/pushnoti"/>
</RelativeLayout>
</ScrollView>
</RelativeLayout>